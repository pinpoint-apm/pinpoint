<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:batch="http://www.springframework.org/schema/batch"
       xsi:schemaLocation="http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <batch:job id="cleanupInactiveApplicationsJob">
        <batch:step id="cleanupInactiveApplicationsStep">
            <batch:tasklet>
                <batch:chunk
                        reader="applicationReader"
                        processor="applicationEmptyFilter"
                        writer="${job.cleanup.inactive.applications.writer:emptyItemWriter}"
                        commit-interval="1"
                        retry-limit="10"
                >
                    <batch:retryable-exception-classes>
                        <batch:include class="java.lang.Exception"/>
                    </batch:retryable-exception-classes>
                </batch:chunk>
            </batch:tasklet>
        </batch:step>
        <batch:listeners>
            <batch:listener ref="jobFailListener"/>
        </batch:listeners>
    </batch:job>

    <bean id="applicationReader" class="com.navercorp.pinpoint.batch.job.ApplicationReader">
        <constructor-arg name="applicationService" ref="applicationService" />
    </bean>
    <bean id="applicationEmptyFilter" class="com.navercorp.pinpoint.batch.job.ApplicationEmptyFilter">
        <constructor-arg name="applicationService" ref="applicationService" />
        <constructor-arg name="emptyDurationThreshold" value="${job.cleanup.inactive.applications.emptydurationthreshold:P14D}" />
    </bean>
    <bean id="applicationRemover" class="com.navercorp.pinpoint.batch.job.ApplicationRemover">
        <constructor-arg name="applicationService" ref="applicationService" />
    </bean>
    <bean id="emptyItemWriter" class="com.navercorp.pinpoint.batch.job.EmptyItemWriter" />

    <bean id="applicationService" class="com.navercorp.pinpoint.batch.service.ApplicationServiceImpl" />

</beans>
